<div style="position: relative; width: 220px; color: white; background-color: #FF7800; margin: auto; top: 70px; padding: 20px">
<h2>Log in</h2>
<style>
a { 
  color: white;
}
a:hover { 
  color: white;
}
</style>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %>:<br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <b>Senha:</b><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <b>Lembrar login</b>
    </div>
  <% end -%>

  <div class="actions" style="color: black; margin-bottom: 10px">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>