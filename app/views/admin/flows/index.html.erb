<p id="notice"><%= notice %></p>

<h1>Admin Flows</h1>

<table>
  <thead>
    <tr>
      <th>Flow type</th>
      <th>Stage</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_flows.each do |admin_flow| %>
      <tr>
        <td><%= admin_flow.flow_type %></td>
        <td><%= admin_flow.stage %></td>
        <td><%= admin_flow.role_id %></td>
        <td><%= link_to 'Show', admin_flow %></td>
        <td><%= link_to 'Edit', edit_admin_flow_path(admin_flow) %></td>
        <td><%= link_to 'Destroy', admin_flow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

