<div style="position: relative; left: 20px">
    <h1>
        <b>
        Ticket <%= @admin_ticket.id %> - 
        <% if @admin_ticket.flow.flow_type == 1 %>
            Aluguel
        <% else %>
            Rollout
        <% end %>
        </b>
        <b> -
          <% if @admin_ticket.flow.flow_type == 1 %>
            <% if @admin_ticket.flow.stage == 1 %>
              Aguardando EPS
            <% elsif @admin_ticket.flow.stage == 2 %>
              Aguardando Dossiê
            <% elsif @admin_ticket.flow.stage == 3 %>
              Dossiê em Aprovação
            <% elsif @admin_ticket.flow.stage == 4 %>
              Em exclusão de débito
            <% elsif @admin_ticket.flow.stage == 5 %>
              Aguardando ajuste comercial
            <% elsif @admin_ticket.flow.stage == 6 %>
              Aguardando report
            <% elsif @admin_ticket.flow.stage == 7 %>
              Finalizado
            <% end %>



          <% elsif @admin_ticket.flow.flow_type == 2 %>
            <% if @admin_ticket.flow.stage == 1 %>
              Em validação pelo cliente
            <% elsif @admin_ticket.flow.stage == 2 %>
              Em aprovação Logística Interna
            <% elsif @admin_ticket.flow.stage == 3 %>
              Em aprovação Logística Outdoor
            <% elsif @admin_ticket.flow.stage == 4 %>
              Aguardando data prestador
            <% elsif @admin_ticket.flow.stage == 5 %>
              Consolidação cronograma
            <% elsif @admin_ticket.flow.stage == 6 %>
              Aprovação cronograma cliente
            <% elsif @admin_ticket.flow.stage == 7 %>
              Finalizado
            <% end %>
          <% end %>
        </b>
    </h1>
</div>

<%= render 'form', admin_ticket: @admin_ticket %>

<div style="position: relative; left: 50px">
    <%= link_to 'Visualizar', @admin_ticket %> |
    <%= link_to 'Voltar', admin_tickets_path %>
</div>
