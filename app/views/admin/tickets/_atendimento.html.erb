<% if (current_user.has_role? :atendimento) %>
<div style="position: relative; left: 50px">
  <table>
    <tr>
      <td><b>Tipo de Ticket:</b></td>
      <td><%= form.select(:ticket_type, options_for_select([['Aluguel', 1]])) %></td>
    </tr>

    <tr>
      <td><b>CNPJ:</b></td>
      <td><%= form.text_field :cnpj, id: :admin_ticket_cnpj %></td>
    </tr>

    <tr>
      <td><b>Nome:</b></td>
      <td><%= form.text_field :name, id: :admin_ticket_name %></td>
    </tr>

    <tr>
      <td><b>Descrição:</b></td>
      <td><%= form.text_field :description, id: :admin_ticket_description %></td>
    </tr>

    <tr>
      <td><b>Cidade:</b></td>
      <td><%= form.text_field :city, id: :admin_ticket_city %></td>
    </tr>

    <tr>
      <td><b>Estado:</b></td>
      <td><%= form.text_field :state, id: :admin_ticket_state %></td>
    </tr>

    <tr>
      <td><b>Endereço:</b></td>
      <td><%= form.text_field :address, id: :admin_ticket_address %></td>
    </tr>
  </table>
</div>
<% end %>